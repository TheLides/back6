@model Backend6.Models.ViewModels.ForumMessageAttachmentViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ForumMessageAttachment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-messageId="@ViewBag.Message.Id" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FilePath" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="file" asp-for="FilePath" class="form-control" />
                    <span asp-validation-for="FilePath" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FileName" class="control-label"></label>
                <div class="col-md-10">
                    <input asp-for="FileName" class="form-control" />
                    <span asp-validation-for="FileName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ForumTopics" asp-action="Details" asp-route-id="@ViewBag.Message.ForumTopicId">Back to Topic</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
